# Editor configuration, see http://editorconfig.org
# http://editorconfig.org1.0

root = true

[*]
charset = utf-8

indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf

[*.json]
charset = utf-8

indent_style = tab
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false
